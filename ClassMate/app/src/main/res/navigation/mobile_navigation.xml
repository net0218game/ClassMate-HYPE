<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_timetable"
        android:name="com.example.classmate.ui.timetable.TimetableFragment"
        android:label="Timetable"
        tools:layout="@layout/fragment_timetable" />

    <fragment
        android:id="@+id/navigation_calendar"
        android:name="com.example.classmate.ui.calendar.CalendarFragment"
        android:label="Calendar"
        tools:layout="@layout/fragment_calendar" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.classmate.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_todo"
        android:name="com.example.classmate.ui.todo.ItemFragment"
        android:label="To Do"
        tools:layout="@layout/fragment_item_list" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.classmate.ui.settings.SettingsFragment"
        android:label="Settings:D"
        tools:layout="@layout/fragment_settings" />
</navigation>