<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:maxHeight="200dp"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Task Details"
            android:textSize="30dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="Title" />

    <TextView
        android:id="@+id/todoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/todo"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="Math Homework"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="Category" />

    <TextView
        android:id="@+id/todoCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/outline_label_24"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="Homework"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="Subject" />

    <TextView
        android:id="@+id/todoSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_menu_book_24"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="Math"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="Due Date" />

    <TextView
        android:id="@+id/todoDue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_calendar_month_24"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="2023/12/06"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="Description" />

    <TextView
        android:id="@+id/todoDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_notes_24"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:maxHeight="150dp"
        android:scrollbars="vertical"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut sem nulla pharetra diam. Amet facilisis magna etiam tempor. Diam quis enim lobortis scelerisque. Mauris sit amet massa vitae tortor condimentum. Malesuada proin libero nunc consequat interdum varius sit amet. Etiam dignissim diam quis enim lobortis scelerisque fermentum dui faucibus. Egestas tellus rutrum tellus pellentesque. Fringilla ut morbi tincidunt augue interdum velit euismod in. Vulputate odio ut enim blandit. Risus viverra adipiscing at in tellus integer feugiat scelerisque varius. Nec nam aliquam sem et tortor consequat id porta nibh. Elementum nibh tellus molestie nunc non blandit. Sit amet mauris commodo quis imperdiet. Imperdiet dui accumsan sit amet nulla facilisi."
        android:textSize="16dp" />


</LinearLayout>